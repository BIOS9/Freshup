{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:daily"
  ],
  "timezone": "Pacific/Auckland",
  "packageRules": [
    {
      "matchPackagePrefixes": ["@types/"],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["lint", "prettier"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
